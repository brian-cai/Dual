<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dual"
        android:textStyle="italic"
        android:textSize="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textAlignment="center"
        android:textColor="#0011FF"
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/find_general_matches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop = "40dp"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:text="Find General Matches"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/current_matches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/find_general_matches"
        android:text="Current Matches"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/current_matches"
        android:text="Profile"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/profile"
        android:text="Search by Tags"
        android:textColor="@color/colorPrimary" />
</android.support.constraint.ConstraintLayout>